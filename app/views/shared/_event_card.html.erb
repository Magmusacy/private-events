<div class="event-card">
  <div class="title">
    <h4>Title</h4>
    <%= link_to event.title, event %>
  </div>
  <div class="location">
    <h4>Location</h4>
    <%= event.location %>
  </div>
  <div class="date">
    <h4>Date</h4>
    <%= event.date %>
  </div>
  <div class="description">
    <h4>Description</h4>
    <%= event.description %>
  </div>
</div>